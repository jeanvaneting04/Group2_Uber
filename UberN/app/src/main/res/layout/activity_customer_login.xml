<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerLoginActivity">

    <ImageView
        android:id="@+id/imgCustomerLogo"
        android:layout_width="match_parent"
        android:layout_height="337dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/txtCustomerStatus"
        android:layout_width="wrap_content"
        android:layout_below="@id/imgCustomerLogo"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Customer Login" />

    <EditText
        android:id="@+id/edtCustomerEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/txtCustomerStatus"
        android:textSize="40dp"
        android:inputType="text"
        android:hint="Email..." />
    <EditText
        android:id="@+id/edtCustomerPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/edtCustomerEmail"
        android:textSize="40dp"
        android:inputType="textPassword"
        android:hint="Password..." />

    <Button
        android:id="@+id/btnCustomerLogin"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@id/edtCustomerPass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="30dp"
        android:text="Login" />

    <TextView
        android:id="@+id/txtCustomerRegisterLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCustomerLogin"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="#FF0000"
        android:text="Don't Have An Account?" />
    <TextView
        android:id="@+id/txtCustomerBackToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCustomerLogin"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="#FF0000"
        android:text="Back to Login" />

    <Button
        android:id="@+id/btnCustomerRegister"
        android:layout_width="500dp"
        android:layout_height="70dp"
        android:layout_below="@id/edtCustomerPass"
        android:layout_marginTop="30dp"
        android:text="Register"
        android:textSize="30dp" />
</RelativeLayout>